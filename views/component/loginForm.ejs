<div class="form-container">
  <form action="" method="POST">
    <div class="group">
      <h4 class="pt-4">User Login information</h4>
    </div>
    <div class="group">
      <label for="Email">Email</label> <br />
      <input
        type="email"
        name="email"
        id="email"
        class="control"
        placeholder="Enter your email"
      />
    </div>

    <div class="group">
      <label for="Password">Password</label> <br />
      <input
        type="password"
        name="password"
        id="password"
        class="control"
        placeholder="Enter your password"
      />
    </div>
    <br />

    <div class="group">
      <input type="submit" class="register_btn" value="Login" />
    </div>
  </form>
</div>
