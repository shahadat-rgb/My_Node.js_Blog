
<div class="error_msg">
  <% if(errors.length > 0) { %>
  <div class="errors">
      <% errors.forEach(error => { %>
       <span class="error"><%= error.msg %></span>
      <% }) %>
  </div>


<form action="/register" method="POST" class="form-container">
  
  <div class="group">
    <h4>Create new account</h4>
  </div>
  <div class="group">
    <label for="Name">Name</label> <br />
    <input
      type="text"
      name="name"
      id="name"
      class="control"
      placeholder="Enter your name"
    />
  </div>

  <div class="group">
    <label for="Email">Email</label> <br />
    <input
      type="email"
      name="email"
      id="email"
      class="control"
      placeholder="Enter your email"
    />
  </div>

  <div class="group">
    <label for="Password">Password</label> <br />
    <input
      type="password"
      name="password"
      id="password"
      class="control"
      placeholder="Enter your password"
    />
  </div>
  <br />

  <div class="group">
    <input type="submit" class="register_btn" value="REGISTER" />
  </div>
</form>
</div>