<form action="/update" method="POST">
    <div class="group">
        <h3>Update Post</h3>
    </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title" value="<%= post.title %>" class="control" placeholder="Post title">
    </div>

    <input type="hidden" name="hiddenID" value="<%= post._id %>">

    <div class="group">
        <label for="body">Body</label>
        <textarea name="body" id="body" placeholder="Enter the details information of your news" class="control"
            cols="20" rows="09"><%= post.body %> </textarea>
    </div>

    <div class="group">
        <input type="submit" value="update post" class="register_btn">
    </div>
</form>