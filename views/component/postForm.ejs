<form action="/createPost" method="POST" enctype="multipart/form-data" >
    <div class="group">
        <h3>Create new post</h3>
    </div>
    <div class="group">
        <label for="title">Title</label>
        <input type="text" name="title" id="title"  value="<%= input_title %>" class="control" placeholder="Post title" >
    </div>
    <div class="group">
        <label for="body">Body</label>
        <textarea name="body" id="body"  placeholder="Enter the details information of your news" class="control" cols="20"  rows="09"><%= body %> </textarea>
    </div>
    <div class="group">
        <label for="imageLabel" class="fileLabel">Upload image</label>
        <input type="file" name="image" id="imageLabel">
    </div>
    <div class="group">
        <input type="submit" value="Add Post" class="register_btn">
    </div>
</form>